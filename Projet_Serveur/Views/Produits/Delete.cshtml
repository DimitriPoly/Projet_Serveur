@model Projet_Serveur.Models.Produit

@{
    ViewBag.Title = "Supprimer";
}

<h2>Supprimer un produit</h2>

<h3>Voulez-vous vraiment supprimer ce produit ?</h3>
<div>
@*On affiche simplement les détails du produit et on propose de le supprimer*@
    <h4>Produit</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NomProduit)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NomProduit)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.QuantiteDispo)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.QuantiteDispo)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Categorie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Categorie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cout)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cout)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Supprimer" class="btn btn-default" /> |
            @Html.ActionLink("Retourner à la vue amdin", "IndexAdmin")
        </div>
    }
</div>
